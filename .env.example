# FastAPI application settings
APP_HOST=127.0.0.1
APP_PORT=8000
DATABASE_URL=sqlite+aiosqlite:///./imprint.db
SESSION_SECRET=change-me
SESSION_COOKIE_NAME=imprint_session
SESSION_SAME_SITE=lax
SESSION_MAX_AGE=86400
SESSION_HTTPS_ONLY=false

# Nostr credentials (use only one)
NOSTR_NSEC=replace-with-nsec
NOSTR_SK_HEX=replace-with-64-char-hex

# Comma-separated relay URLs
NOSTR_RELAYS=wss://relay.damus.io,wss://nos.lol
ENABLE_INDEXER=true

# Admin access
ADMIN_TOKEN=
ADMIN_NPUBS=
